{
  "name": "glacis-internal",
  "scripts": {
    "deploy": "npx hardhat run scripts/deploy.ts",
    "test": "./scripts/compile_tests.sh && npx hardhat test ; forge test",
    "test:hardhat": "./scripts/compile_tests.sh && DEST_CHAIN=hardhat SRC_CHAIN=hardhat npx hardhat test",
    "test:forge": "./scripts/compile_tests.sh && forge test",
    "test:hardhat:debug": "./scripts/compile_tests.sh && DEST_CHAIN=hardhat SRC_CHAIN=hardhat npx --detailed=true hardhat test",
    "test:forge:debug": "./scripts/compile_tests.sh && forge test -vvv",
    "test:gas": "bash scripts/plotGas.sh",
    "hint": "solhint 'contracts/**/*.sol' 'test/**/*.sol'",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol' 'test/**/*.sol'",
    "coverage": "npx hardhat coverage"
  },
  "devDependencies": {
    "@axelar-network/axelar-cgp-solidity": "^4.5.0",
    "@axelar-network/axelar-gmp-sdk-solidity": "^5.3.0",
    "@axelar-network/axelar-local-dev": "^2.0.0",
    "@axelar-network/axelarjs-sdk": "^0.12.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.0.3",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/contracts": "^4.5.0",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.4",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "@chainlink/contracts-ccip": "^1.2.1",
    "@hyperlane-xyz/core": "^3.5.1",
    "@layerzerolabs/scan-client": "^0.0.6",
    "@layerzerolabs/solidity-examples": "github:LayerZero-Labs/solidity-examples",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "fs": "^0.0.1-security",
    "solidity-coverage": "^0.8.5"
  }
}
